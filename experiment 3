    private void jtuserActionPerformed(java.awt.event.ActionEvent evt) {                                      

    }                                      

    private void bloginActionPerformed(java.awt.event.ActionEvent evt) {                                      

        if(jtuser.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "Please fill out the Username");
        }
        else if(jPassword.getText().equals("")){
            JOptionPane.showMessageDialog(null,"Please fill out the password");
        }
        else if(jtuser.getText().contains("Charan")&& jPassword.getText().contains("rec@123"))
        {
            JOptionPane.showMessageDialog(null,"Welcome Charan");
        }
        else
        {
            JOptionPane.showMessageDialog(null,"Wrong username or password!!!","Message",JOptionPane.ERROR_MESSAGE);
        }
    }                                      

    private void jcshow_passwordActionPerformed(java.awt.event.ActionEvent evt) {                                                
        if(jcshow_password.isSelected())
        {
            jPassword.setEchoChar((char)0);
        }
        else
        {
            jPassword.setEchoChar('*');
        }
    }                                              
